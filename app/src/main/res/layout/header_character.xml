<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="33dp"
        >

        <ImageView
            android:id="@+id/imgCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test"
            android:scaleType="centerCrop"

            />

        <View
            android:id="@+id/imageOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/starkOverlay"/>

        <TextView
            android:id="@+id/labelNamed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/labelTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"

            android:textStyle="bold"
            tools:text="Jon snow" />

        <TextView
            android:id="@+id/labelTitled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            tools:text="Lord comandante de la guardia de la noche" />




    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btHouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_frey"
        android:scaleType="center"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"

        app:fabSize="normal"

        />

</FrameLayout>